{% extends "base.twig" %}

{% block title %}LSteam Profile page{% endblock %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ full_url_for('home') }}assets/css/header.css"/>
{% endblock %}

{% block header %}
    {{ parent() }}

    <a href="{{ url_for('friends') }}">
        <button class="btn btn-outline-dark me-2" name="" id="" type="button">
            Friends
        </button>
    </a>
    
    <a href="{{ url_for('store') }}">
        <button class="btn btn-outline-dark me-2" name="" id="" type="button">
            Store
        </button>
    </a>

    <a href="{{ url_for('my_games') }}">
        <button class="btn btn-outline-dark me-2" name="" id="" type="button">
            My Games
        </button>
    </a>

    <a href="{{ url_for('showList') }}">
        <button class="btn btn-outline-dark me-2" name="" id="" type="button">
            Wish List
        </button>
    </a>

    <a href="{{ url_for('wallet') }}">
        <button class="btn btn-outline-dark me-2" name="" id="" type="button" href="{{ url_for('wallet') }}">
            Wallet
        </button>
    </a>

    <form action="{{ url_for('logout') }}" method="POST" accept-charset="utf-8" style="background-position: center top;">
        <button class="btn btn-outline-dark me-2" name="" id="" type="submit">
            Log Out
        </button>
    </form>

    <a class="navbar-brand" href="{{ url_for('profile') }}">
        <img src="{{ full_url_for('home') }}assets/uploads/{% if formData.photo %}{{ formData.photo }}{% endif %}" alt="" width="40">
    </a>

{% endblock %}

{% block content %}
    <main class="main" style="height: 405px; margin-bottom: 17%">
        <b><p class="section_title">Change password</p></b>
        <form action="{{ url_for('newPassword') }}" method="POST" enctype="multipart/form-data" accept-charset="utf-8" style="background-position: center top;">
            <p class="text-gray">Old password: <input type= "text" name="old_password" value=""></p>

            <p class="text-gray">New password: <input type= "text" name="new_password" value=""></p>

            <p class="text-gray">Confirm password: <input type= "text" name="confirm_password" value=""></p>
            {% if formErrors.password %}
                <p style="color: red;">{{ formErrors.password }}</p>
            {% endif %}

            <b><input type="submit" class="btn btn-outline-dark me-2" name="upload" value="Update password"  class="button-gray" style="margin-left: 2%" ></b>

        </form>
        {% if formErrors.ok %}
            <p style="color: green;">{{ formErrors.ok }}</p>
        {% endif %}
    </main>
{% endblock %}